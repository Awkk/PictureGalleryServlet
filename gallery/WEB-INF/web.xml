<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <servlet>
    <servlet-name>main</servlet-name>
    <servlet-class>MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>main</servlet-name>
    <url-pattern></url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>gallery</servlet-name>
    <servlet-class>GalleryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>gallery</servlet-name>
    <url-pattern>/gallery</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>gallery.jsp</servlet-name>
    <jsp-file>/jsp/gallery.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>gallery.jsp</servlet-name>
    <url-pattern>/gallery.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>login.jsp</servlet-name>
    <jsp-file>/jsp/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>login.jsp</servlet-name>
    <url-pattern>/login.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>signup</servlet-name>
    <servlet-class>SignupServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>signup</servlet-name>
    <url-pattern>/signup</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>upload</servlet-name>
    <servlet-class>UploadServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>upload.jsp</servlet-name>
    <jsp-file>/jsp/upload.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>upload.jsp</servlet-name>
    <url-pattern>/upload.jsp</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>header.jsp</servlet-name>
    <jsp-file>/jsp/header.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>header.jsp</servlet-name>
    <url-pattern>/header.jsp</url-pattern>
  </servlet-mapping>
</web-app>
